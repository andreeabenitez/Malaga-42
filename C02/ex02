#include <unistd.h>

int	ft_str_is_alpha(char *str)
{
	int	i;

	i = 0;
	while ((str[i] >= 'a' && str[i] <= 'z') || (str[i] >= 'A' && str[i] <= 'Z'))
		i++;
	if (str[i] == '\0')
		return (1);
	else
		return (0);
}

int main()
{
char *test1 = "Hello";   
char *test2 = "Hello123";     
printf("Test 1: %s -> %d\n", test1, ft_str_is_alpha(test1));
printf("Test 2: %s -> %d\n", test2, ft_str_is_alpha(test2));
return (0);
}
