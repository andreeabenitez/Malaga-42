#include <stdio.h>
#include <unistd.h>

char	*ft_strupcase(char *str)
{
	int	i;

	i = 0;
	while (str[i] != '\0')
	{
		if (str[i] >= 'a' && str[i] <= 'z')
		{
			str[i] = str[i] - 32;
		}
		i++;
	}
	return (str);
}

int main()
{
    char test1[] = "hello";
    char test2[] = "HeLLo WoRlD";
    printf("Test 1: %s -> %s\n", test1, ft_strupcase(test1));
    printf("Test 2: %s -> %s\n", test2, ft_strupcase(test2));

    return (0);
}
