#include <unistd.h>
#include <stdio.h>

void	ft_div_mod(int a, int b, int *div, int *mod)
{
	*div = a / b;
	*mod = a % b;
}

int main (void)
{       
        int a = 10;
        int b = 3;
        int div_result;
        int mod_result;
        ft_div_mod (a, b, &div_result, &mod_result);
        printf("Division: %d / %d = %d\n", a, b, div_result);
        printf("Modulus: %d %% %d = %d\n", a, b, mod_result);
        return 0;
}
